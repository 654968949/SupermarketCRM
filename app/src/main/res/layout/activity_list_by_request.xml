<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="按需查询商品页"
        android:textSize="23dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/prtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   商品名："
                />
            <EditText
                android:id="@+id/selectprtName_input_ud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:ems="10"
                android:inputType="text">
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/prtJinhuodanhao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   进货单号：" />

            <EditText
                android:id="@+id/selectprtJinhuodanhao_input_ud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text" >
            </EditText>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >
            <TextView
                android:id="@+id/prtCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   商品种类：" />

            <Spinner
                android:id="@+id/selectprtCategory_input_ud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="待写入"
                android:inputType="text"
                />
        </TableRow>



        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/prtGongyingshang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   供应商：" />

            <Spinner
                android:id="@+id/selectprtGongyingshang_input_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="待写入"
                android:inputType="text"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectbyRequring"
                android:layout_marginLeft="100dp"
                android:text="查询"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectExit"
                android:layout_marginLeft="100dp"
                android:text="退出"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
